@page
@model VolgaIT.Pages.Apps.CreateModel

@{
    ViewData["Title"] = "Добавить";
}

<h1>Добавить</h1>

<h4>Приложение</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                @{//appid - только отображение
                }
                <label asp-for="Application.AppId" class="control-label"></label>
                <input asp-for="Application.AppId" class="form-control" readonly value="@Guid.NewGuid()"/>
                <span asp-validation-for="Application.AppId" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Application.Name" class="control-label"></label>
                <input asp-for="Application.Name" class="form-control" />
                <span asp-validation-for="Application.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
