@page
@model VolgaIT.Pages.Analytics.CreateModel

@{
    ViewData["Title"] = "Событие";
}

<h1>Добавить</h1>

<h4>Событие</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppEvent.AppId" class="control-label"></label>
                <input asp-for="AppEvent.AppId" class="form-control" value="@Request.Query["AppId"]"/>
                <span asp-validation-for="AppEvent.AppId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppEvent.Event" class="control-label"></label>
                <input asp-for="AppEvent.Event" class="form-control" />
                <span asp-validation-for="AppEvent.Event" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppEvent.Info" class="control-label"></label>
                <textarea asp-for="AppEvent.Info" class="form-control" rows="10" cols="60"></textarea>
                <span asp-validation-for="AppEvent.Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад к аналитике</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
